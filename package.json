{
  "name": "realworld-slices",
  "private": true,
  "version": "1.0.0",
  "description": "A Realworld.io backend following SOLID architecture in slices, not layers.",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && env-cmd node dist/index.js",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "migration:revert": "npm run build && typeorm migration:revert",
    "migration:generate": "npm run migration:run && typeorm migration:generate -n",
    "migration:run": "npm run build && typeorm migration:run",
    "test": "npm run build && npm run test:unit && npm run test:integration",
    "test:unit": "env-cmd -f test.env mocha \"test/unit/**/*.test.ts\"",
    "test:integration": "env-cmd -f test.env mocha \"test/integration/**/*.test.ts\""
  },
  "repository": "https://github.com/jonathonflorek/realworld-slices",
  "keywords": [],
  "author": "Jonathon Florek",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^6.0.0",
    "fp-ts": "^2.4.2",
    "io-ts": "^2.0.6",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.17.1",
    "reflect-metadata": "^0.1.13",
    "slug": "^2.1.0",
    "typeorm": "^0.2.22"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/express-jwt": "0.0.42",
    "@types/jsonwebtoken": "^8.3.6",
    "@types/mocha": "^5.2.7",
    "@types/slug": "^0.9.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "dotenv": "^8.2.0",
    "env-cmd": "^10.0.1",
    "http-status-codes": "^1.4.0",
    "mocha": "^10.2.0",
    "node-mocks-http": "^1.8.1",
    "rimraf": "^3.0.0",
    "sqlite3": "^4.1.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.4"
  }
}
